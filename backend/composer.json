{
    "name": "workana/hiring_challenge",
    "description": "Workana Dev Challenge",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-redis": "*",
        "beberlei/assert": "^3.3",
        "firebase/php-jwt": "^5.4",
        "php-di/php-di": "^6.3",
        "predis/predis": "^1.1",
        "pusher/pusher-php-server": "^7.0",
        "slim/psr7": "^1.2",
        "slim/slim": "^4.5",
        "vimeo/psalm": "^4.10",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4.3"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
